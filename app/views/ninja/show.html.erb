<div class="card">
  <h2>Ninja : <%= @ninja.name %></h2><br>
  <table style="width:100%">
    <tr>
      <th>Weapon</th>
      <th>Damage</th> 
    </tr>
    <% @ninja.weapons.each do |weapon| %>
      <tr>
        <td><%= weapon.name %></td>
        <td><%= weapon.damage %></td> 
      </tr>
    <% end %>
  </table><br>
  <p><%= link_to "Edit ninja's name", edit_ninja_path, class: 'btn btn-lg btn-warning btn-block' %></p>
</div>